<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <!--Edit text to enter text for creating a QR code-->

            <EditText
                android:id="@+id/idEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idIVQrcode"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:autofillHints=""
                android:hint="UPI ID"
                android:inputType="text" />

            <EditText
                android:id="@+id/idEdt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idEdt"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:autofillHints=""
                android:hint="Amount"
                android:inputType="text" />

            <EditText
                android:id="@+id/idEdt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idEdt1"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:autofillHints=""
                android:hint="Your Name"
                android:inputType="text" />

            <!--Button for creating a QR code-->

            <Button
                android:id="@+id/idBtnGenerateQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idEdt2"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/generate_qr_code" />

            <!--We are using this image view to display our QR code-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/idIVQrcode"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/qr_code" />
            </LinearLayout>

            <!--    <EditText
                    android:id="@+id/idEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idIVQrcode"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:autofillHints=""
                    android:hint="@string/enter_your_info"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/idEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idIVQrcode"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:autofillHints=""
                    android:hint="@string/enter_your_info"
                    android:inputType="text" />-->

        </LinearLayout>
    </ScrollView>
